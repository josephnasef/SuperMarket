@model IEnumerable<Super.SuperMarket.DAl.SQLServer.Model.Bill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div>
    <h3>Bills List For Admin</h3>
    <hr style="margin: 5px;" />    
</div>

<br />
<div id="target" class="center margin-top-79  margin-left_-154">
    <button id="btnn" class="btn btn-info " onclick="MyToggle()"> Show Table </button>
</div>
<table id="Visabile" cellspacing="0" style="width:76% !important" class="table table-hover table-bordered table-striped table-responsive btn-table border-radios Hidden-transition transiton border-collapse-separate margin-top-26">
    <thead class="text_color-f2f2f2 background-color-black">

        <tr >
            <th class="nowrap">
                @Html.DisplayNameFor(model => model.OperationType.Name)
            </th>
            <th class="nowrap">

                @Html.DisplayNameFor(model => model.PaymentMethod.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfExpire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>

            <th>Action</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OperationType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfExpire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
           
            <td class="nowrap padding-left-10 text-center">
                <a href="@Url.Action("Details", new { id = item.Id })" class="tooltipp btn btn-primary">
                    <i class="fa fa-info" aria-hidden="true"></i>
                    <span class="tooltiptexts"> Details </span>
                </a>
                <a href="@Url.Action("Edit", new { id = item.Id })" class="tooltipp btn btn-primary">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <span class="tooltiptexts"> Edit </span>
                </a>
            </td>
        </tr>
    }

</table>
