

@model Super.SuperMarket.DAl.SQLServer.Model.Bill

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bill</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col-xs-6 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.FullPrice, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div>
                        @Html.EditorFor(model => model.FullPrice, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                        @Html.ValidationMessageFor(model => model.FullPrice, "", new { @class = "text-danger col-lg-offset-3" })
                    </div>
                </div>
            </div>

            <div class="col-xs-6 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.DateOfExpire, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div>

                        @Html.TextBoxFor(model => model.DateOfExpire,
                       new
                            {
                           @class = "form-control",
                           data_Provide = "datepicker",
                           data_date_format = "m/dd/yyyy",
                           data_data_autoclose = "true"
                       })
                        @Html.ValidationMessageFor(model => model.DateOfExpire, "", new { @class = "text-danger col-lg-offset-3" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.paymentMethodId, "payment Method ", htmlAttributes: new { @class = "control-label col-md-3" })
                    @Html.DropDownList("paymentMethodId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.paymentMethodId, "", new { @class = "text-danger col-lg-offset-3" })
                </div>
            </div>

            <div class="col-xs-6 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.OperationTypeId, "Operation Type ", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div>
                        @Html.DropDownList("OperationTypeId", null, htmlAttributes: new { @class = "form-control col-md-2" })
                        @Html.ValidationMessageFor(model => model.OperationTypeId, "", new { @class = "text-danger col-lg-offset-3" })
                    </div>
                </div>
            </div>
        </div>

        
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.UpdatedDate)
        @Html.HiddenFor(model => model.UpdatedBy)

        <br />
        <div class="row">
            <div class="col-md-offset-4 col-md-2">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>

            <div class="col-md-2">
                <div class="btn btn-danger text-color-white">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "text-color-white" })
                </div>
            </div>

        </div>
    </div>
}